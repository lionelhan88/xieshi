<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/easy_swipe_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/white_round_stroke_bg"
    app:contentView="@+id/flow_declaration_item_content"
    app:rightMenuView="@id/right">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/flow_declaration_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/sm_flow_declaration_sale_user_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售对象："
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toBottomOf="@+id/sm_flow_declaration_sale_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sm_flow_declaration_sale_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="混凝土公司混凝土公司"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sm_flow_declaration_sale_user_label"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sm_flow_declaration_item_ship_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:text="船名（车号）："
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toBottomOf="@+id/sm_flow_declaration_item_ship_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sm_flow_declaration_sale_user" />

        <TextView
            android:id="@+id/sm_flow_declaration_item_ship_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintStart_toEndOf="@+id/sm_flow_declaration_item_ship_name_label"
            app:layout_constraintTop_toBottomOf="@+id/sm_flow_declaration_sale_user" />

        <TextView
            android:id="@+id/declaration_list_item_top_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sm_flow_declaration_item_ship_name" />


        <TextView
            android:id="@+id/sm_flow_declaration_sale_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="销售数量（t）："
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintEnd_toStartOf="@+id/sm_flow_declaration_sale_number"
            app:layout_constraintTop_toBottomOf="@+id/declaration_list_item_top_line" />

        <TextView
            android:id="@+id/sm_flow_declaration_sale_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="1000"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/declaration_list_item_top_line"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/sm_flow_declaration_item_sand_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="用砂名称："
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/declaration_list_item_top_line" />

        <TextView
            android:id="@+id/sm_flow_declaration_item_sand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="人工砂"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintStart_toEndOf="@+id/sm_flow_declaration_item_sand_label"
            app:layout_constraintTop_toBottomOf="@+id/declaration_list_item_top_line" />

        <TextView
            android:id="@+id/sm_flow_declaration_declare_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="申报日期："
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sm_flow_declaration_item_sand" />

        <TextView
            android:id="@+id/sm_flow_declaration_declare_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="2020-10-01"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintStart_toEndOf="@+id/sm_flow_declaration_declare_date_label"
            app:layout_constraintTop_toBottomOf="@+id/sm_flow_declaration_item_sand" />


        <TextView
            android:id="@+id/sm_flow_declaration_declare_commission_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="未委托"
            android:textColor="@color/red_dark"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sm_flow_declaration_sale_number_label" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/red_dark"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/white" />
    </LinearLayout>
</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>