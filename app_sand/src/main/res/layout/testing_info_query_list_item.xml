<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/white_round_stroke_bg"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <com.scetia.app_sand.view.LabelView
        android:id="@+id/result_query_item_label_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        app:label_angle="right_top"
        app:label_content_text="不合格"
        app:label_content_text_color="@color/white"
        app:label_content_text_size="@dimen/text_size_small"
        app:label_length="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_query_item_sample_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="样品名称"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_query_item_sample_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="在检已出报告"
        android:textColor="@color/orange1"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_query_item_sample_name" />

    <TextView
        android:id="@+id/result_query_item_commission_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="委托日期："
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toEndOf="@+id/result_query_item_sample_state"
        app:layout_constraintTop_toBottomOf="@+id/result_query_item_sample_name" />

    <TextView
        android:id="@+id/result_query_item_commission_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="2020-11-01"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toEndOf="@+id/result_query_item_commission_date_label"
        app:layout_constraintTop_toBottomOf="@+id/result_query_item_sample_name" />

    <TextView
        android:id="@+id/result_query_item_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_query_item_sample_state" />

    <TextView
        android:id="@+id/result_query_item_commission_company_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="检测单位："
        android:textColor="@color/grey_11"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_query_item_top_line" />

    <TextView
        android:id="@+id/result_query_item_commission_company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="上海建设检测有限公司"
        android:textColor="@color/grey_11"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/result_query_item_commission_company_label"
        app:layout_constraintTop_toBottomOf="@+id/result_query_item_top_line" />

    <TextView
        android:id="@+id/result_query_item_ship_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="船名（船号）："
        android:textColor="@color/grey_11"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_query_item_commission_company" />

    <TextView
        android:id="@+id/result_query_item_ship_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0063"
        android:textColor="@color/grey_11"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toEndOf="@+id/result_query_item_ship_label"
        app:layout_constraintTop_toBottomOf="@+id/result_query_item_commission_company" />
</androidx.constraintlayout.widget.ConstraintLayout>