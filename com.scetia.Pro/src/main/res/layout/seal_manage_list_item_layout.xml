<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="8dp">

    <TextView
        android:id="@+id/seal_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:text="类型："
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_seal_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toStartOf="@+id/tv_matter_state"
        app:layout_constraintStart_toEndOf="@+id/seal_type_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_matter_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:text="申请中"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/seal_manage_list_item_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/common_background"
        app:layout_constraintTop_toBottomOf="@+id/tv_seal_type" />

    <TextView
        android:id="@+id/matter_apply_content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="5dp"
        android:text="申请内容："
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seal_manage_list_item_top_line" />

    <TextView
        android:id="@+id/tv_matter_apply_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="5dp"
        android:text="adasdasd"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/matter_apply_content_label"
        app:layout_constraintTop_toBottomOf="@+id/seal_manage_list_item_top_line" />

    <TextView
        android:id="@+id/matter_apply_man_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="5dp"
        android:gravity="end"
        android:text="申请人："
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/matter_apply_content_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_matter_apply_content" />

    <TextView
        android:id="@+id/tv_matter_man_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="5dp"
        android:text="Andy"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/matter_apply_man_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_matter_apply_content" />

    <TextView
        android:id="@+id/matter_apply_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="5dp"
        android:text="申请日期："
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_matter_man_content" />

    <TextView
        android:id="@+id/tv_matter_apply_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="5dp"
        android:text="2021-03-02"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/matter_apply_date_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_matter_man_content" />

    <TextView
        android:id="@+id/need_seal_number_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="5dp"
        android:gravity="end"
        android:text="盖章份数："
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/matter_apply_date_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_matter_apply_date" />

    <TextView
        android:id="@+id/need_seal_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:text="3"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/need_seal_number_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_matter_apply_date" />
</androidx.constraintlayout.widget.ConstraintLayout>