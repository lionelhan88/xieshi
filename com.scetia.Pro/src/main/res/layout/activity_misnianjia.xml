<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_misnianjia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.mis.activities.MisAnnualLeaveManageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_nj_nianfen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:dropDownWidth="match_parent"
            android:dropDownVerticalOffset="47dp"
            android:spinnerMode="dropdown"
            android:theme="@style/SpinnerStyle"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_mis_annual_leave_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="5"
            android:textColor="@color/blue_normal3"
            android:drawableEnd="@drawable/xialamis"/>

        <Spinner
            android:id="@+id/sp_nj_zt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="5"
            android:dropDownWidth="match_parent"
            android:dropDownVerticalOffset="47dp"
            android:spinnerMode="dropdown"
            android:theme="@style/SpinnerStyle"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_mis_annual_leave_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="5"
            android:textColor="@color/blue_normal3"
            android:drawableEnd="@drawable/xialamis"/>
        <!-- 适配不同机型，宽和高改为动态宽高 -->
        <Button
            android:id="@+id/bt_nj_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginTop="9dp"
            android:layout_marginRight="@dimen/x21"
            android:layout_marginBottom="9dp"
            android:layout_weight="3"
            android:background="@drawable/shape_kongxinblue"
            android:layout_gravity="center"
            android:text="查询" />

    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/mis_annual_leave_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mis_annual_leave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_nj_two"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:visibility="invisible">

            <Button
                android:id="@+id/bt_njtwo_sq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:layout_weight="1"
                android:background="@drawable/njsq"
                android:text="年假申请"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <Button
                android:id="@+id/bt_njtwo_sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_weight="1"
                android:background="@drawable/njsp"
                android:text="年假审批"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_nj_one"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:visibility="visible">

            <Button
                android:id="@+id/bt_njone_sq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:background="@drawable/njsp"
                android:text="年假申请"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
