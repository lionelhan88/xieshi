<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_background"
    tools:context="com.lessu.xieshi.todaystatistics.TodayStatisticsActivity" >
    <LinearLayout
        android:id="@+id/ll_today_satictics_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/riqibeijing">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日统计"
            android:textSize="18sp"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@drawable/riqibeijing"
        android:padding="18dp"
        >
        <TextView
            android:id="@+id/tv_qianyitian"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="前一天"/>
        <LinearLayout
            android:id="@+id/ll_riqi"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rili"/>
            <TextView
                android:id="@+id/tv_riqi"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=""
                android:textColor="#ffffff"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/xiala"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_houyitian"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="后一天"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_margin="9dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/xiaojuxing">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#ffffff"
            android:text="已委托样品数"/>
        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="31dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#636363"
                android:textSize="11sp"
                android:text="工程验收样品:"/>
            <TextView
                android:id="@+id/tv_gcyanshouyp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#3d9fe1"
                android:text=""/>
            <TextView
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#636363"
                android:textSize="11sp"
                android:text="监督抽检样品:"/>
            <TextView
                android:id="@+id/tv_jdchoujianyp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#3d9fe1"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="31dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#636363"
                android:textSize="11sp"
                android:text="非工程验收样品:"/>
            <TextView
                android:id="@+id/tv_feigcyanshouyp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#3d9fe1"
                android:text=""/>
            <TextView
                android:layout_marginLeft="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#636363"
                android:textSize="11sp"
                android:text="统计时间:"/>
            <TextView
                android:id="@+id/tv_tongjishijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#ff6600"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="9dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/dajuxing">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:text="检测项目"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="39dp"
                android:background="#dcdcdc"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:text="已委托样品"
                android:gravity="center"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="39dp"
                android:background="#dcdcdc"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:text="已检样品"
                android:gravity="center"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="39dp"
                android:background="#dcdcdc"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:text="不合格样品"
                android:gravity="center"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="39dp"
                android:background="#dcdcdc"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:text="未检测量"
                android:gravity="center"/>

        </LinearLayout>

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/pl_jinritongji"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:footerDividersEnabled="false"
            android:divider="@null"
            android:dividerHeight="0dp"
            >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>

    </LinearLayout>

</LinearLayout>