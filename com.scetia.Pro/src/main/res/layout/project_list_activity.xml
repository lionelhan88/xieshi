<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lessu.xieshi.map.ProjectListActivity" >
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/mapButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/juxing"
                >
                <ImageView
                    android:id="@+id/iv_map"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ditu1"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/tv_map"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium"
                    android:text="地图"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="28dp"
                android:background="#dbdadd"
                />
            <LinearLayout
                android:id="@+id/projectButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/yuanjiaojuxing"
                >
                <ImageView
                    android:id="@+id/iv_project"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/zuijin"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/tv_project"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium"
                    android:text="列表"
                    android:textColor="#3598dc"
                    />
            </LinearLayout>
        </LinearLayout>
    </AbsoluteLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:footerDividersEnabled="false"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:visibility="gone"
        >
    </ListView>

</LinearLayout>