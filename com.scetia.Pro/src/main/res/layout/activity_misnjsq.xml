<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_misnjsq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    tools:context=".module.mis.activities.MisAnnualLeaveApplyActivity">


    <LinearLayout
        android:background="@drawable/nianjiajuxing"
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shijians"/>
            <TextView
                android:textSize="17sp"
                android:textColor="#268beb"
                android:text="请假时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>
            <RelativeLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <CheckBox
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:textColor="#999999"
                    android:textSize="17sp"
                    android:text="半天"
                    android:id="@+id/cb_njsq"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector_in"
                    ></CheckBox>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f8fe"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_startstart"
                android:text="开始时间"
                android:textSize="17sp"
                android:textColor="#268beb"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_starttime"
                android:textSize="17sp"
                android:textColor="#666666"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingRight="5dp"
                android:hint="@string/apply_date_select"
                android:gravity="right"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f8fe"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_endend"
                android:text="结束时间"
                android:textSize="17sp"
                android:textColor="#999999"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_endtime"
                android:textSize="17sp"
                android:textColor="#999999"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingRight="5dp"
                android:hint="@string/apply_date_select"
                android:gravity="right"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f8fe"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:text="共计"
                android:textSize="17sp"
                android:textColor="#268beb"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_alltime"
                android:textSize="17sp"
                android:textColor="#666666"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:background="@drawable/nianjiajuxing"
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/qingjiashiyou"
            android:textSize="17sp"
            android:textColor="#268beb"
            android:text="请假事由"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f8fe"/>
        <EditText
            android:id="@+id/et_shiyou"
            android:textCursorDrawable="@null"
            android:gravity="top"
            android:background="#ffffff"
            android:textSize="17sp"
            android:textColor="#666666"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>



    </LinearLayout>
    <Button
        android:id="@+id/bt_njsq_tijiao"
        android:text="提交"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:background="@drawable/njsp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="37dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
