<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/y10"
    android:background="@drawable/white_round_stroke_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/result_query_detail_paramter_item_name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="参数名称"
        android:textColor="@color/grey_dim"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toStartOf="@+id/result_query_detail_paramter_item_testing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_query_detail_paramter_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/grey_11"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toStartOf="@+id/result_query_detail_paramter_item_testing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_query_detail_paramter_item_name_label"
        tools:text="参数名称" />

    <TextView
        android:id="@+id/result_query_detail_paramter_item_testing_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="检测值"
        android:textColor="@color/grey_dim"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_query_detail_paramter_item_testing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/grey_11"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_query_detail_paramter_item_testing_label"
        tools:text="检测值" />

    <TextView
        android:id="@+id/paramter_item_center_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_query_detail_paramter_item_name" />

    <TextView
        android:id="@+id/result_query_detail_paramter_item_result_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="检测结果"
        android:textColor="@color/grey_dim"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paramter_item_center_line" />

    <TextView
        android:id="@+id/result_query_detail_paramter_item_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/grey_11"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_query_detail_paramter_item_result_label" />
</androidx.constraintlayout.widget.ConstraintLayout>