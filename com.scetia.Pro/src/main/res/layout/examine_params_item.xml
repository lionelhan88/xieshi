<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:drawableLeft="@drawable/yuan"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参数名称:"
            android:textColor="#ababab"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/paramNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="213231"
            android:textColor="#434141"
            android:textSize="17sp"
            android:singleLine="true"
            android:ellipsize="end"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xuxian"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:drawableLeft="@drawable/yuan"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标准值:"
            android:textColor="#ababab"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/standardValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="213231"
            android:textColor="#434141"
            android:textSize="17sp"
            android:singleLine="true"
            android:ellipsize="end"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xuxian"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:drawableLeft="@drawable/yuan"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检测值:"
            android:textColor="#ababab"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/checkValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="213231"
            android:textColor="#434141"
            android:textSize="17sp"
            android:singleLine="true"
            android:ellipsize="end"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xuxian"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:drawableLeft="@drawable/yuan"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检测结果:"
            android:textColor="#ababab"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/checkResultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="213231"
            android:textColor="#434141"
            android:textSize="17sp"
            android:singleLine="true"
            android:ellipsize="end"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xuxian"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xuxian"/>
</LinearLayout>

