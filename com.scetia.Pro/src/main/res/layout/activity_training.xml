<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.training.TrainingActivity">

    <LinearLayout
        android:id="@+id/training_top_user"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/training_index_title_bg">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/tv_day_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="27"
                    android:textSize="45sp"/>
                <TextView
                    android:id="@+id/tv_month_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:text="09，2020"
                    android:textSize="20sp"/>
            </LinearLayout>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/training_user_name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_large"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="@dimen/x5"
                    android:text=""/>
                <TextView
                    android:id="@+id/tv_sgz_name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintTop_toBottomOf="@+id/training_user_name"
                    app:layout_constraintStart_toStartOf="parent"
                    android:padding="@dimen/x5"
                    android:text="上岗证号："/>
                <TextView
                    android:id="@+id/tv_sgz"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/tv_sgz_name"
                    app:layout_constraintTop_toBottomOf="@+id/training_user_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    android:padding="@dimen/x5"
                    android:text=""/>
                <TextView
                    android:id="@+id/tv_huiyuanhao_name"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sgz_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tv_sgz_name"
                    android:padding="@dimen/x5"
                    android:text="会员号："/>
                <TextView
                    android:id="@+id/training_huiyuanhao"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/tv_huiyuanhao_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sgz_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    android:padding="@dimen/x5"
                    android:text=""/>
                <TextView
                    android:id="@+id/tv_huiyuan_name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_huiyuanhao_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    android:padding="@dimen/x5"
                    android:text=""/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/training_Customer_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/text_size_large"
        android:gravity="center"
        android:layout_marginTop="@dimen/y10"
        android:textColor="@android:color/background_dark"
        app:layout_constraintTop_toBottomOf="@+id/training_top_user"/>
    <LinearLayout
        android:id="@+id/center_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintHeight_percent="0.15"
        android:layout_marginTop="@dimen/y30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/training_Customer_Name">

        <LinearLayout
            android:id="@+id/training_scan_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_train_scan_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_training_scan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="扫码登录"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginBottom="@dimen/y10"
            android:background="@color/light_gray1"/>
        <LinearLayout
            android:id="@+id/training_learns_online"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_train_learn_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_training_learn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="在线课程"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginBottom="@dimen/y10"
            android:background="@color/light_gray1"/>
        <LinearLayout
            android:id="@+id/training_teach_data"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_train_teach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_training_teach"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="在线授课情况"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/guid_center_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/center_menu"/>
    <TextView
        android:id="@+id/training_learns_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guid_center_bottom_line"
        android:layout_marginTop="@dimen/y25"
        android:textSize="@dimen/text_size_large"
        android:layout_marginLeft="@dimen/x15"
        android:text="已报名且付费课程"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/y10"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        app:layout_constraintTop_toBottomOf="@+id/training_learns_title">
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/flowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>