<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/yuanjiaojuxing2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="会员编号"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/replace_sign_hy_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/text_black_round_bg"
            android:paddingLeft="2dp"
            android:textSize="@dimen/text_size_medium"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_weight="0.5"
            android:textSize="@dimen/text_size_large"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="17sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/yuanjiaojuxing2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"/>

        <EditText
            android:id="@+id/replace_sign_user_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/text_black_round_bg"
            android:textSize="@dimen/text_size_medium"
            android:paddingLeft="2dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="电话"
            android:gravity="center"
            android:layout_weight="0.5"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />

        <EditText
            android:id="@+id/replace_sign_user_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/text_black_round_bg"
            android:textSize="@dimen/text_size_medium"
            android:paddingLeft="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_replace_sign_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/yuanjiaojuxing2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="签到时间"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/replace_sign_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_medium"
            android:background="@drawable/text_black_round_bg"
            android:paddingLeft="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/yuanjiaojuxing2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="单位名称"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"/>

        <EditText
            android:id="@+id/replace_sign_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_weight="4"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_medium"
            android:background="@drawable/text_black_round_bg"
            android:enabled="false"
            android:paddingLeft="2dp"/>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/y20">
        <ImageView
            android:id="@+id/replace_sign_hand_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/y10"
            android:background="@color/common_background"
            android:padding="2dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/bt_replace_confirm"/>
        <com.lessu.xieshi.SignView
            android:id="@+id/replace_sign_hand_sign_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/y10"
            android:gravity="center"
            android:background="@color/common_background"
            android:hint="请在方框中手写下姓名作为签到记录，感谢您的配合。"
            app:layout_constraintBottom_toTopOf="@+id/bt_replace_confirm"/>
        <TextView
            android:id="@+id/bt_replace_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.3"
            android:background="@drawable/text_light_gray_stroke_bg"
            android:text="退出签到"
            android:gravity="center"
            android:textColor="@color/light_gray1"
            android:textSize="@dimen/text_size_large"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginBottom="@dimen/y10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="@dimen/y5"/>
        <TextView
            android:id="@+id/bt_replace_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.3"
            android:background="@drawable/text_replace_sign_confirm_bg"
            android:text="提交"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            android:layout_marginBottom="@dimen/y10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/y5"/>
        <TextView
            android:id="@+id/bt_replace_reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.3"
            android:background="@drawable/text_light_gray_stroke_bg"
            android:text="重签"
            android:gravity="center"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/light_gray1"
            android:layout_marginBottom="@dimen/y10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/y5"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"/>

</LinearLayout>
