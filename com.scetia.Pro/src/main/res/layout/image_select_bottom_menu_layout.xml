<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_round_stroke_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/image_select_menu_take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="拍照"
            android:textColor="@color/grey_dim"
            android:textSize="@dimen/text_size_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray1" />

        <TextView
            android:id="@+id/image_select_menu_photo_pictures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="相册"
            android:textColor="@color/grey_dim"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>


    <TextView
        android:id="@+id/dialog_meeting_confirm_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/white_round_stroke_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_xlarge" />
</LinearLayout>