<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/sand_sales_target_list_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableFooterFollowWhenNoMoreData="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sand_sales_target_list_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/sand_sales_target_list_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:src="@drawable/icon_add"
        app:backgroundTint="@color/fab_click_bg"
        app:borderWidth="0dp"
        app:fabSize="mini"
        app:layout_behavior="com.lessu.xieshi.view.FabScrollBehavior"
        app:rippleColor="@color/blue_normal1" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>