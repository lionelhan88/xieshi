<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke">

    <com.lessu.xieshi.module.sand.ObservableScrollView
        android:id="@+id/info_query_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/x10"
            android:paddingEnd="@dimen/x10">

            <LinearLayout
                android:id="@+id/sand_result_query_detail_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x10"
                android:layout_marginTop="@dimen/y15"
                android:layout_marginEnd="@dimen/x10"
                android:background="@drawable/text_blue_round_bg"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="流水号："
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/testing_info_query_detail_serial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11111000001"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <TextView
                    android:id="@+id/result_query_detail_sample_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20"
                    android:text="人工砂"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/sand_result_query_detail_text_style"
                        android:text="样品编号" />

                    <TextView
                        style="@style/sand_result_query_detail_text_style"
                        android:gravity="center"
                        android:text="样品规格" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/testing_info_query_detail_sample_code"
                        style="@style/sand_result_query_detail_text_style"
                        android:text="10001010" />

                    <TextView
                        android:id="@+id/testing_info_query_detail_sample_spec"
                        style="@style/sand_result_query_detail_text_style"
                        android:gravity="center"
                        android:text="53" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/sand_result_query_detail_text_style"
                        android:text="样品状态" />

                    <TextView
                        style="@style/sand_result_query_detail_text_style"
                        android:gravity="center"
                        android:text="委托日期" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/testing_info_query_detail_sample_state"
                        style="@style/sand_result_query_detail_text_style"
                        android:text="已送检" />

                    <TextView
                        android:id="@+id/testing_info_query_detail_commission_date"
                        style="@style/sand_result_query_detail_text_style"
                        android:gravity="center"
                        android:text="2020-11-01" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/testing_info_query_detail_testing_result_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x15"
                android:text="样品检测结论"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sand_result_query_detail_top" />

            <TextView
                android:id="@+id/testing_info_query_detail_testing_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x10"
                android:layout_marginEnd="@dimen/x10"
                android:background="@drawable/white_round_stroke_bg"
                android:minLines="4"
                android:padding="@dimen/x15"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:hint="暂无"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/testing_info_query_detail_testing_result_label" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/center_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x10"
                android:layout_marginTop="@dimen/y15"
                android:layout_marginEnd="@dimen/x10"
                android:background="@drawable/white_round_stroke_bg"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/testing_info_query_detail_testing_result">

                <TextView
                    android:id="@+id/result_query_detail_bottom_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他信息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/result_query_detail_bottom_commission_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20"
                    android:gravity="left"
                    android:text="委托编号"
                    android:textColor="@color/grey_dim"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/result_query_detail_bottom_title"
                    app:layout_constraintWidth_percent="0.3" />

                <TextView
                    android:id="@+id/result_query_detail_bottom_commission_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20"
                    android:textColor="@color/grey_11"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintStart_toEndOf="@+id/result_query_detail_bottom_commission_label"
                    app:layout_constraintTop_toBottomOf="@+id/result_query_detail_bottom_title"
                    tools:text="1120201101" />

                <TextView
                    android:id="@+id/result_query_detail_bottom_ship_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:gravity="left"
                    android:text="船名（船号）"
                    android:textColor="@color/grey_dim"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@+id/result_query_detail_bottom_ship_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/result_query_detail_bottom_commission_name"
                    app:layout_constraintWidth_percent="0.3" />

                <TextView
                    android:id="@+id/result_query_detail_bottom_ship_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:textColor="@color/grey_11"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintStart_toEndOf="@+id/result_query_detail_bottom_ship_label"
                    app:layout_constraintTop_toBottomOf="@+id/result_query_detail_bottom_commission_name" />

                <TextView
                    android:id="@+id/result_query_detail_bottom_wharf_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:gravity="left"
                    android:text="码头名称"
                    android:textColor="@color/grey_dim"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/result_query_detail_bottom_ship_name"
                    app:layout_constraintWidth_percent="0.3" />

                <TextView
                    android:id="@+id/result_query_detail_bottom_wharf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:textColor="@color/grey_11"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintStart_toEndOf="@+id/result_query_detail_bottom_wharf_label"
                    app:layout_constraintTop_toBottomOf="@+id/result_query_detail_bottom_ship_name" />

                <TextView
                    android:id="@+id/result_query_detail_bottom_sales_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:gravity="left"
                    android:text="销售对象"
                    android:textColor="@color/grey_dim"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@+id/result_query_detail_bottom_sales"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/result_query_detail_bottom_wharf"
                    app:layout_constraintWidth_percent="0.3" />

                <TextView
                    android:id="@+id/result_query_detail_bottom_sales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:textColor="@color/grey_11"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/result_query_detail_bottom_sales_label"
                    app:layout_constraintTop_toBottomOf="@+id/result_query_detail_bottom_wharf"
                    tools:text="建筑工程公司建筑工程公司建筑工程公司建筑工程公司" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/result_query_detail_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x10"
                android:layout_marginTop="@dimen/y15"
                android:layout_marginEnd="@dimen/x10"
                android:background="@drawable/white_smoke_round_stroke_bg"
                android:overScrollMode="never"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/center_info" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.lessu.xieshi.module.sand.ObservableScrollView>

    <include
        layout="@layout/content_loading_state_layout"
        android:visibility="gone" />
</FrameLayout>