<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginBottom="8dp"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	android:orientation="vertical"
	android:background="#ffffff">
	<LinearLayout
		android:padding="2dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/xiushi"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_vertical"/>
		<LinearLayout
			android:layout_marginLeft="10dp"
			android:layout_width="match_parent"
			android:layout_height="58dp"
			android:orientation="vertical">
			<TextView
				android:singleLine="true"
				android:id="@+id/ProjectNameTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="交通轨道 "
				android:textSize="12sp"
				android:textColor="#333333"/>
			<RelativeLayout
				android:layout_marginTop="2dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/ProjectStatusTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="10sp"
					android:textColor="#ff6600"
					android:text="进行中"/>
				<TextView
					android:paddingLeft="50dp"
					android:id="@+id/ProjectNatureTextView"
					android:layout_marginLeft="40dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="10sp"
					android:textColor="#8b8a8f"
					android:text="房建"/>
				<TextView

					android:paddingLeft="170dp"
					android:id="@+id/ProjectRegionTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="10sp"
					android:textColor="#8b8a8f"
					android:text="浦东新区"/>
			</RelativeLayout>
			<LinearLayout
				android:layout_marginTop="2dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/dizhia"/>
				<TextView
					android:singleLine="true"
					android:id="@+id/ProjectAddressTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="10sp"
					android:textColor="#8b8a8f"
					android:text="上海市浦东新区"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@drawable/xian"/>

</LinearLayout>
