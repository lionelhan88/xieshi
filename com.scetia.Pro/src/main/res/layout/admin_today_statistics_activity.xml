<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_pparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical"
    tools:context="com.lessu.xieshi.todaystatistics.AdminTodayStatisticsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <!--<com.handmark.pulltorefresh.library.PullToRefreshListView-->
        <!--android:id="@+id/listView"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:footerDividersEnabled="false"-->
        <!--android:dividerHeight="0dp"-->
        <!--android:divider="@null"-->
        <!--&gt;-->
        <!--</com.handmark.pulltorefresh.library.PullToRefreshListView>-->
        <ListView
            android:id="@+id/lv_ditu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="@drawable/dianjibeijing"/>

        <RelativeLayout
            android:id="@+id/rl_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.baidu.mapapi.map.MapView
                android:id="@+id/map_jinritongji"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <com.lessu.xieshi.customView.ZoomControlsView
                android:id="@+id/zcv_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp" />

            <Button
                android:id="@+id/bt_sousuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/sousuojuxinga"
                android:drawableLeft="@drawable/sousuotubiao"
                android:drawablePadding="-100dp"
                android:paddingLeft="100dp"
                android:text="搜索工地名称"
                android:textColor="#7f7f7f" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"

                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_spinner"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_fujin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="附近：1公里"
                        android:textColor="#3385ff"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_xiala"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:background="@drawable/xialaa" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_xialaliebiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/xian" />

                    <TextView

                        android:id="@+id/tv_max"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="不限"
                        android:textColor="#333333"
                        android:textSize="12sp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/xian" />

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="1公里"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/xian" />

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="2公里"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/xian" />

                    <TextView
                        android:id="@+id/tv_5"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="3公里"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/xian"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_10"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="10公里"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:visibility="gone"/>



                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_daohang"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="200dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_daohangtitle"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="上海浦东"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_daohangaddress"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="上海浦东"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <RelativeLayout
                        android:id="@+id/rl_daohang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/anniu"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_daohang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/daohang" />

                        <TextView
                            android:id="@+id/bt_danghang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/iv_daohang"
                            android:text="导航"
                            android:textColor="#ffffff" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_xinxichaxun"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/anniu"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_xinxichaxun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/xinxichaxuna" />

                        <TextView
                            android:id="@+id/bt_qvxiao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_xinxichaxun"
                            android:paddingLeft="5dp"
                            android:text="信息查询"
                            android:textColor="#ffffff" />

                    </RelativeLayout>
                    <!--<Button-->
                    <!--android:id="@+id/bt_danghang"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:background="@drawable/anniu"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textColor="#ffffff"-->
                    <!--android:text="导航"-->
                    <!--android:drawableLeft="@drawable/daohang"-->
                    <!--android:paddingLeft="50dp"-->
                    <!--android:paddingRight="50dp"-->
                    <!--/>-->
                    <!--<Button-->
                    <!--android:layout_marginLeft="2dp"-->
                    <!--android:background="@drawable/anniu"-->
                    <!--android:textColor="#ffffff"-->
                    <!--android:id="@+id/bt_qvxiao"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="信息查询"-->
                    <!--android:drawableLeft="@drawable/xinxichaxuna"-->
                    />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_yeshu"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/bt_shangyiye"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/button"
                android:text="上一页" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_yeshuxianshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/bt_xiayiye"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/button"
                android:text="下一页" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/caidanbeijing"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_ditu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_ditu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ditu1a" />

            <TextView
                android:id="@+id/tv_ditu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="地图"
                android:textColor="#118bca" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_liebiao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_liebiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/liebiao" />

            <TextView
                android:id="@+id/tv_liebiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="列表"
                android:textColor="#9b9cae" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>