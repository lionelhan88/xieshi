<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing"
    tools:context="com.lessu.xieshi.login.FirstActivity">
    <RelativeLayout
        android:id="@+id/ll_tianqi"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_tianqi"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/tianqi"/>

        <TextView
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/x20"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:id="@+id/tv_tianqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_tianqi"/>
        <TextView
            android:id="@+id/first_tv_tmp"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/x30"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_tianqi"/>

        <ImageView
            android:id="@+id/first_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:src="@drawable/icon_setting"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_touxiang"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/touxiang"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/tv_yonghuming"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:text="asdasd"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_seccion1"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_seccion1"
                    android:layout_width="87dp"
                    android:layout_height="87dp" />
                <TextView
                    android:id="@+id/tv_seccion1"
                    android:layout_marginTop="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:text="不合格信息查询"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_seccion2"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_seccion2"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    />
                <TextView
                    android:id="@+id/tv_seccion2"
                    android:layout_marginTop="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:text="记录审核"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_seccion3"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_seccion3"
                    android:layout_width="87dp"
                    android:layout_height="87dp" />
                <TextView
                    android:id="@+id/tv_seccion3"
                    android:layout_marginTop="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:text="报告批准"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_seccion4"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_seccion4"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    />
                <TextView
                    android:id="@+id/tv_seccion4"
                    android:layout_marginTop="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:text="系统设置"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_seccion5"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_seccion5"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    />
                <TextView
                    android:id="@+id/tv_seccion5"
                    android:layout_marginTop="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:text="重新登录"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_seccion6"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_seccion6"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    />
                <TextView
                    android:id="@+id/tv_seccion6"
                    android:layout_marginTop="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:text="新加功能"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
