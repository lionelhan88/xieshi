<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>
    <!--Activity切换的过度动画-->
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_from_right_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left_to_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_from_left_to_right</item>
    </style>

    <!-- 登录页面全屏-->
    <style name="LoginTheme" parent="@style/AppBaseTheme">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!--启动页避免白屏给用户不好的体验，设置启动页背景-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- spinner -->
    <style name="CustomSpinnerStyle">
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <!--seekbar-->
    <style name="CustomSeekBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">8.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/selector_seekbar</item>
        <item name="android:minHeight">8.0dip</item>
        <item name="android:thumb">@drawable/yuana</item>
        <item name="android:thumbOffset">10.0dip</item>
    </style>

    <style name="SpinnerStyle">
        <item name="colorControlNormal">#ea831e</item> <!--改变了spinner的颜色  -->
    </style>

    <style name="admin_today_info_ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="admin_today_info_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="text_style_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>


    //工地搜索

    <style name="site_search_by_condition_edit_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/orange2</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:background">@null</item>
    </style>



    <style name="seal_matter_detail_text_label_style" parent="info_show_list_left">
        <item name="android:textColor">@color/grey_dim</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="seal_matter_detail_text_content_style" parent="info_show_list_right">
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
    //工地查询-搜索界面

    <style name="statistics_search_linear_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y100</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">17dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:background">@drawable/light_gray_underline_with_white_bg</item>
    </style>

    <style name="statistics_search_text_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_gray2</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="statistics_search_text_content_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/orange2</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    //评估批准打印

    <style name="evaluation_comparison_content_style" parent="info_show_list_right">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
</resources>