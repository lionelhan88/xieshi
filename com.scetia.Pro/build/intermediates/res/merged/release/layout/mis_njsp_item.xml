<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="#ffffff">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>

		<CheckBox
			android:id="@+id/cb_njsp_xuanzhong"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="12dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:button="@drawable/checkbox_selector_in"
			></CheckBox>


		<LinearLayout
			android:layout_marginLeft="21dp"
			android:layout_width="0dp"
			android:layout_weight="18"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>
			<TextView
				android:id="@+id/tv_njsp_name"
				android:layout_marginTop="6dp"
				android:textSize="17sp"
				android:textColor="#333333"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<LinearLayout
				android:layout_marginTop="6dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:text="请假时间: "
					android:textSize="13sp"
					android:textColor="#666666"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView
					android:id="@+id/tv_njsp_qingjia"
					android:textSize="13sp"
					android:textColor="#333333"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>


			<LinearLayout
				android:layout_marginBottom="6dp"
				android:layout_marginTop="6dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:text="申请时间: "
					android:textSize="13sp"
					android:textColor="#666666"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView
					android:id="@+id/tv_njsp_shenqing"
					android:textSize="13sp"
					android:textColor="#666666"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>

		</LinearLayout>

		<TextView
			android:id="@+id/tv_njsp_status"
			android:textSize="17sp"
			android:textColor="#268beb"
			android:layout_gravity="center_vertical"
			android:layout_width="0dp"
			android:layout_weight="5"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="13dp"
		android:background="#efefef"/>

</LinearLayout>