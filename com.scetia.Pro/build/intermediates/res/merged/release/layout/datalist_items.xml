<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal" >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:text="标签号："
        	android:layout_marginLeft="2dip"
        	android:textColor="#990000"
        	/>
	    <TextView 
	        android:id="@+id/TvTagUii_Data"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal" >
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="存储区："
	        android:layout_marginLeft="2dip"
	        android:textColor="#990000"
	        />
	    <TextView 
	        android:id="@+id/TvBank_Data"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        />
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="地址："
	        android:layout_marginLeft="2dip"
	        android:textColor="#990000"
	        />
	    <TextView 
	        android:id="@+id/TvPtr_Data"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        />
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="长度："
	        android:layout_marginLeft="2dip"
	        android:textColor="#990000"
	        />
	    <TextView 
	        android:id="@+id/TvLen_Data"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        />
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="次数："
	        android:layout_marginLeft="2dip"
	        android:textColor="#990000"
	        />
	    <TextView 
	        android:id="@+id/TvCount_Data"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal" >
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="数据："
	        android:layout_marginLeft="2dip"
	        android:textColor="#990000"
	        />
	    <TextView 
	        android:id="@+id/TvData_Data"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        />
	    <!-- tiaoshi -->
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="错误码："
	        android:layout_marginLeft="2dip"
	        android:textColor="#990000"
	        />
	    <TextView 
	        android:id="@+id/TvError_Data"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        />
	</LinearLayout> 
	
</LinearLayout>