<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.lessu.xieshi.construction.ConstructionSearchActivity" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="3dp"
        android:paddingRight="7dp"
        android:paddingLeft="17dp"
        android:background="@android:color/white"
        >
        <TextView
            android:text="关键词"
            android:textColor="#ababab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            />
        <EditText 
            android:id="@+id/queryStrTextView"
            android:text=""
            android:textColor="#f78320"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingRight="7dp"
        android:paddingLeft="17dp"
        android:background="@android:color/white"
        >
        <TextView 
            android:text="是否包含作废样品"
            android:textColor="#ababab"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            />
        <RadioGroup
            android:id="@+id/rg_search"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"/>
            <RadioButton
                android:id="@+id/rb_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="否"/>
        </RadioGroup>
    </RelativeLayout>
    <com.lessu.uikit.Buttons.Button
        android:id="@+id/bt_search"
        android:layout_marginTop="10dp"
        android:layout_width="203dp"
        android:layout_height="40dp"
        android:text="确定"
        android:textColor="#ffffff"
        android:background="@drawable/yuanjiaojuxing1"/>
</LinearLayout>
