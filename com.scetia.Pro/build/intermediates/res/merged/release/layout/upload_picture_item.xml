<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    
    android:layout_height="wrap_content"
     >
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         >
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:background="@android:color/white"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="工程名称:"
                android:textSize="@dimen/text_size_medium"
                android:textColor="#ababab"
                android:gravity="center_vertical"
                />
            <TextView 
                android:id="@+id/projectNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2013000323"
                android:textSize="@dimen/text_size_medium"
                android:textColor="#474545"
                android:gravity="center_vertical"
                />
        </LinearLayout>
     <AbsoluteLayout 
         android:layout_width="match_parent"
        android:layout_height="273dp"
         >
         <ImageView 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:src="@drawable/bg_upload"
             android:scaleType="fitXY"
             />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="23dp"
        android:paddingRight="23dp"
            >
            <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="任务名称:"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#ababab"
		                android:gravity="center_vertical"
		                />
		            <TextView 
		                android:singleLine="true"
		                android:ellipsize="end"
		                android:id="@+id/taskNameTextView"
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="2013004"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#474545"
		                android:gravity="center_vertical"
		                />
        	</LinearLayout>
        	<LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="开始时间:"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#ababab"
		                android:gravity="center_vertical"
		                />
		            <TextView 
		                android:singleLine="true"
		                android:ellipsize="end"
		                android:id="@+id/startTimeTextView"
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="2014-09-03"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#474545"
		                android:gravity="center_vertical"
		                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
		            <TextView 
		                
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="结束时间:"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#ababab"
		                android:gravity="center_vertical"
		                />
		            <TextView 
		                android:singleLine="true"
		                android:ellipsize="end"
		                android:id="@+id/endTimeTextView"
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="2014-09-01"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#474545"
		                android:gravity="center_vertical"
		                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="合同登记号:"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#ababab"
		                android:gravity="center_vertical"
		                />
		            <TextView 
		                android:singleLine="true"
		                android:ellipsize="end"
		                android:id="@+id/markCodeTextView"
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="2014-09-01"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#474545"
		                android:gravity="center_vertical"
		                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
		            <LinearLayout 
		                android:layout_width="0dp"
		                android:layout_height="match_parent"
		                android:layout_weight="1"
		                android:orientation="horizontal"
		                >
		            <TextView 
		                
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="委托编号:"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#ababab"
		                android:gravity="center_vertical"
		                />
		            <TextView 
		                android:singleLine="true"
		                android:ellipsize="end"
		                android:id="@+id/entrustCodeTextView"
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="2014-09-01"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#474545"
		                android:gravity="center_vertical"
		                />
		            </LinearLayout>
		            <LinearLayout 
		                android:layout_width="0dp"
		                android:layout_height="match_parent"
		                android:layout_weight="1"
		                android:orientation="horizontal"
		                >
		            <TextView 
		                
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="检测方式:"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#ababab"
		                android:gravity="center_vertical"
		                />
		            <TextView 
		                android:singleLine="true"
		                android:ellipsize="end"
		                android:id="@+id/testTypeTextView"
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="2014-09-01"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#474545"
		                android:gravity="center_vertical"
		                />
		            </LinearLayout>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="工程地址:"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#ababab"
		                android:gravity="center_vertical"
		                />
		            <TextView 
		                android:singleLine="true"
		                android:ellipsize="end"
		                android:id="@+id/addressTextView"
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="2014-09-01"
		                android:textSize="@dimen/text_size_small"
		                android:textColor="#474545"
		                android:gravity="center_vertical"
		                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        >
        <LinearLayout 
            android:id="@+id/uploadButtom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView 
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_upload_upload"
                android:scaleType="fitXY"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传"
                android:textColor="#3598dc"
                android:textSize="@dimen/text_size_medium"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/downloadButton" 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView 
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_upload_download"
                android:scaleType="fitXY"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载"
                android:textColor="#3598dc"
                android:textSize="@dimen/text_size_medium"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
     </AbsoluteLayout>
     <View 
         android:layout_width="match_parent"
         android:layout_height="12dp"
         />
    </LinearLayout>
</LinearLayout>
