<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent" 
    >
    <AbsoluteLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
	    <AbsoluteLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        >
			<com.lessu.xieshi.HorizontalScrollViewEx 
			    android:id="@+id/ScrollView" 
			    android:layout_width="fill_parent"  
			    android:layout_height="fill_parent" 
			    android:scrollbars="none"
			    >  
			    <LinearLayout android:id="@+id/LinearLayout"  
			        android:orientation="horizontal" 
			        android:layout_width="wrap_content" 
			        android:layout_height="match_parent">  
			    </LinearLayout>  
			</com.lessu.xieshi.HorizontalScrollViewEx>  
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal"
			    android:gravity="center_vertical"
			    >
			    <ImageView 
			        android:id="@+id/leftButton"
			        android:layout_width="50dp"
			        android:layout_height="50dp"
			        android:src="@drawable/icon_download_left_arrow"
			        android:scaleType="fitXY"
			        />
			    <LinearLayout 
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:layout_height="match_parent"
			        ></LinearLayout>
			    <ImageView 
			        android:id="@+id/rightButton"
			        android:layout_width="50dp"
			        android:layout_height="50dp"
			        android:src="@drawable/icon_download_right_arrow"
			        android:scaleType="fitXY"
			        />
			</LinearLayout>
		</AbsoluteLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:gravity="bottom"
		    >
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="80dp"
		        android:orientation="vertical"
		        android:gravity="center_horizontal"
		        android:background="@color/common_background"
		        >
		        <TextView 
		            android:id="@+id/indexTextView"
		            android:layout_width="wrap_content"
		            android:layout_height="0dp"
		            android:layout_weight="1"
		            android:text="1/3"
		            android:gravity="center_vertical"
		            />
		        <LinearLayout 
		            android:id="@+id/downloadButton"
		            android:layout_width="wrap_content"
		            android:layout_height="0dp"
		            android:layout_weight="1"
		            android:orientation="horizontal"
		            android:gravity="center"
		            >
		            <ImageView 
		                android:layout_width="19dp"
		                android:layout_height="19dp"
		                android:src="@drawable/icon_download_bar"
		                android:scaleType="fitXY"
		                />
		            <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:text="下载到相册"
			            android:textSize="@dimen/text_size_medium"
			            android:textColor="#3598dc"
			            android:gravity="center_vertical"
			            />
		        </LinearLayout>
		    </LinearLayout>
		</LinearLayout>
	</AbsoluteLayout>
</LinearLayout>