<com.lessu.xieshi.customView.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#3598DC">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:clickable="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/sekector_scanitem"
                android:id="@+id/ll_shenqingshangbao"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/shenqingshangbao"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="16dp"
                    android:text="申请上报"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/sekector_scanitem"
                android:id="@+id/ll_shenhexiazai"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/shenhexiazai"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="16dp"
                    android:text="审核下载"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/sekector_scanitem"
                android:id="@+id/ll_rukuchakan"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/rukuchakan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="16dp"
                    android:text="入库查看"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/sekector_scanitem"
                android:id="@+id/ll_shebeixinxi"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/shebeixinxi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="16dp"
                    android:text="设备信息"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="32dp"
                    android:text="功率扫描设置"/>
                <SeekBar
                    android:layout_margin="14dp"
                    android:id="@+id/sb_scan"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:max="25"
                    android:progress="1"
                    style="@style/myseekbarstyle"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="32dp"
                    android:text="弱                        强"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


    <com.lessu.xieshi.customView.MyRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal"
                android:background="@drawable/djuxing"
                android:padding="5dp">
                <Button
                    android:id="@+id/bt_shenhexiazai"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dyuanjiaojuxing"
                    android:text="下载"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="25dp"/>
                <Button
                    android:id="@+id/bt_shenheyaopinqveren"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dyuanjiaojuxing"
                    android:text="样品信息确认"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="50dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_shenheloding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/qingshaodeng"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <ListView
                android:id="@+id/lv_shenheshujvjiaohu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>


        </LinearLayout>
    </com.lessu.xieshi.customView.MyRelativeLayout>
</com.lessu.xieshi.customView.DragLayout>
