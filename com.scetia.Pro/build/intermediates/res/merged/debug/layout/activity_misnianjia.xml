<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_misnianjia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lessu.xieshi.mis.activitys.MisnianjiaActivity">
    <LinearLayout
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">
        <Spinner
            android:dropDownVerticalOffset="47dp"
            android:theme="@style/SpinnerStyle"
            android:id="@+id/sp_nj_nianfen"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:spinnerMode="dropdown"
            android:dropDownWidth="match_parent"
            android:layout_height="match_parent"/>

        <Spinner
            android:layout_gravity="right"
            android:dropDownVerticalOffset="47dp"
            android:theme="@style/SpinnerStyle"
            android:id="@+id/sp_nj_zt"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:spinnerMode="dropdown"
            android:dropDownWidth="match_parent"
            android:layout_height="match_parent"/>
        <!-- 适配不同机型，宽和高改为动态宽高 -->
        <Button
            android:id="@+id/bt_nj_search"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x21"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/shape_kongxinblue"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="查询"/>

    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_weight="10"
        android:id="@+id/lv_nianjia"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:footerDividersEnabled="false"
        android:dividerHeight="0dp"
        android:divider="@null"
        >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

<RelativeLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="81dp">
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/ll_nj_two"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:background="#ffffff"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="81dp">
        <Button
            android:id="@+id/bt_njtwo_sq"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="21dp"
            android:background="@drawable/njsq"
            android:text="年假申请"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/bt_njtwo_sp"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="@drawable/njsp"
            android:text="年假审批"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_nj_one"
        android:visibility="visible"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:background="#ffffff"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="81dp">
        <Button
            android:id="@+id/bt_njone_sq"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="@drawable/njsp"
            android:text="年假申请"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>

</LinearLayout>
