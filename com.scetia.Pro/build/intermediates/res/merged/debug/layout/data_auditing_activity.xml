<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    tools:context="com.lessu.xieshi.dataauditing.DataAuditingActivity" >
    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <com.handmark.pulltorefresh.library.PullToRefreshListView

            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:footerDividersEnabled="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:dividerHeight="0dp"
            android:divider="@null"
            >
        </com.handmark.pulltorefresh.library.PullToRefreshListView
            >
        <LinearLayout
            android:id="@+id/handleView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_auditing_float"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <LinearLayout
                    android:id="@+id/auditingChoosenButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="15dp"
                        android:src="@drawable/logo_auditing_list"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:text="审核选中"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4da1de"
                        android:layout_marginLeft="6dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="28dp"
                    android:background="#dbdadd"
                    />
                <LinearLayout
                    android:id="@+id/auditingAllButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="15dp"
                        android:src="@drawable/logo_auditing_all"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:text="全部审核"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4da1de"
                        android:layout_marginLeft="6dp"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </AbsoluteLayout>
</LinearLayout>

