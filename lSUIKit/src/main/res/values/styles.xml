<resources>


    <style name="info_show_list_left">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="info_show_list_right">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="info_show_list_edit_text" parent="info_show_list_right">
        <item name="android:enabled">true</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="info_show_list_linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/press_with_light_gray_underline_bg</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
